<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/pad_10dp"
    android:paddingLeft="@dimen/pad_15dp"
    android:paddingRight="@dimen/pad_15dp"
    android:paddingTop="@dimen/pad_10dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="TextView"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_18sp" />

        <TextView
            android:id="@+id/lbl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="TextView"
            android:textColor="@color/main_color_gray_lt"
            android:textSize="@dimen/txt_14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/l1"
                style="@style/lbl_count"
                android:layout_width="@dimen/pad_30dp"
                android:layout_height="@dimen/pad_30dp"
                android:text="00" 
                />
             <TextView
                android:id="@+id/l2"
                style="@style/lbl_count"
                android:layout_width="@dimen/pad_30dp"
                android:layout_height="@dimen/pad_30dp"
                android:text="00" />
              <TextView
                android:id="@+id/l3"
                style="@style/lbl_count"
                android:layout_width="@dimen/pad_30dp"
                android:layout_height="@dimen/pad_30dp"
                android:text="00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >
            <TextView
                android:id="@+id/textView1"
                style="@style/lbl_count"
                android:layout_width="@dimen/pad_30dp"
                android:layout_height="wrap_content"
                android:text="chats"
                android:textSize="@dimen/txt_7sp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/textView1"
                style="@style/lbl_count"
                android:layout_width="@dimen/pad_30dp"
                android:layout_height="wrap_content"
                android:text="projects"
                android:textSize="@dimen/txt_7sp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/textView1"
                style="@style/lbl_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="followers"
                android:textSize="@dimen/txt_7sp"
                android:background="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
